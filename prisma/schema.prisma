// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatusEnum {
  NEW
  COOKING
  IN_DELIVERY
  DELIVERED
  COMPLETED
}

model Order {
  id Int @id @default(autoincrement())
  status OrderStatusEnum
  persons Int
  createdAt DateTime
  updatedStatusAt DateTime
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String
  password String
}

model Dish {
    id Int @id @default(autoincrement())
    name String
    image String
    description String
    foodType DishFoodTypeEnum 
    price Int
    weight Int
    madeFor MadeFor 
}

enum MadeFor {
  BREAKFAST
  LUNCH
  DINNER
}

enum DishFoodTypeEnum {
  VEGETARIAN
  NON_VEGETARIAN
}