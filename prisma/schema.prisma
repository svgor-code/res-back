generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum OrderStatusEnum {
  NEW
  COOKING
  IN_DELIVERY
  DELIVERED
  COMPLETED
}

model Order {
  id Int @id @default(autoincrement())
  status OrderStatusEnum
  persons Int
  createdAt DateTime
  updatedStatusAt DateTime
}

model User {
  id Int @id @default(autoincrement())
  firstName String
  lastName String
  email String
  password String
}

model Table {
  id Int @id @default(autoincrement())
  name String
  size Int
  tableBooking TableBooking?

  @@unique([id, size])
}

model TableBooking {
  id Int @id @default(autoincrement())
  from String
  to String
  table Table @relation(fields: [tableId, persons], references: [id, size])
  tableId Int
  persons Int
  cause String
  description String

  @@unique([tableId, persons])
}
